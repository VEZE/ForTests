<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:prefix="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/CardTop"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
          >

        <android.support.v7.widget.CardView
            style="@style/categoriesCardViewButtons"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
           >

            <ImageView
                android:id="@+id/CardTopImageLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                prefix:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/CardTopTextLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="CardView1" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/categoriesCardViewButtons"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
           >

            <ImageView
                android:id="@+id/CardTopImageCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                prefix:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/CardTopTextCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="CardView2" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/categoriesCardViewButtons"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/CardTopImageRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                prefix:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/CardTopTextRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="CardView3" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
